#:  import icon kivy.garden.iconfonts.icon

<ImgCard@ToggleButtonBehavior+BoxLayout>:
    im_source:          ""
    im_caption:         ""
    orientation:        "vertical"
    on_release:           app.root.viewimg(self)
    Image:
        source:         root.im_source
        size_hint_y:    .9
    Label:
        text:           root.im_caption
        size_hint_y:    .1


<GalleryWindow>:
    id:                 main_win
    orientation:        "vertical"
#    canvas.before:
#        Color:
#            rgba:       (1, 1, 1, 1)
#        Rectangle:
#            pos:        self.pos
#            size:       self.size

    BoxLayout:
        id:             top_nav
        size_hint_y:    None
        height:         35
        Button:
            id:             file_trigger
            text:           'File'
            size_hint:      (.2, None)
            height:         30
            on_release:     file_dropdown.open(self)

            Widget:
                on_parent:  file_dropdown.dismiss()

                DropDown:
                    id:     file_dropdown
                    Button:
                        id:         open_img
                        text:       'Open_Image'
                        size_hint_y:None
                        height:     30
                    Button:
                        id:         open_folder
                        text:       '%s'%(icon('zmdi-folder-outline', 32))
                        markup:     True
                        size_hint_y:None
                        height:     30
        Label:
            id:             title
            text:           "Marcus PhotoViewer"
            size_hint:      (.6, None)
            height:         30
            bold:           True
        Button:
            id:             more_trigger
            text:           'More'
            size_hint:      (.2, None)
            height:         30
            on_release:     more_dropdown.open(self)

            Widget:
                on_parent:  more_dropdown.dismiss()

                DropDown:
                    id:     more_dropdown
                    Button:
                        id:         open_about
                        text:       'About'
                        size_hint_y:None
                        height:     30
                    Button:
                        id:         quit
                        text:       'Quit'
                        size_hint_y:None
                        height:     30
    RecycleView:
        id:                         img_base
        viewclass:                  "ImgCard"
        RecycleGridLayout:
            default_size:           (None, 250)
            default_size_hint:      (1, None)
            size_hint_y:            None
            height:                 self.minimum_height
            spacing:                10
            #orientation:            "vertical"
            cols:                   6
