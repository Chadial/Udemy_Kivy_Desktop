<CalcInput>:
    font_size:              16

<CalcWindow>:
    orientation:            "vertical"
    padding:                (10, 0)
    spacing:                1
    canvas.before:
        Color:
            rgba:           (.004, .055, .122, 1)
        Rectangle:
            pos:            self.pos
            size:           self.size

    BoxLayout:
        id:                 display
        size_hint_y:        .3
        Label:
            id:             expr
            text:           ''
            size_hint_x:    .3
            font_size:      26
        Label:
            id:             equal
            text:           ''
            size_hint_x:    .6
            font_size:      26
        Label:
            id:             result
            text:           ''
            size_hint_x:    .1
            font_size:      26
    CalcInput:
        id:                 query
        multiline:          False
        font_size:          32
        size_hint_y:        .1
        foreground_color:   (.004, .055, .102, 1)
        background_normal:  ''
        background_color:   (1, 1, 1, 1)
    BoxLayout:
        id:                 main_btns
        size_hint_y:        .6
        spacing:            1
        padding:            (10, 0)
        GridLayout:
            id:             numbers
            cols:           3
            spacing:        1
        BoxLayout:
            id:             symbols_cont
            orientation:    "vertical"
            spacing:        1
            GridLayout:
                id:         symbols
                cols:       3
                size_hint_y:.75
                spacing:    1
        GridLayout:
            id:             last_symbols
            cols:           1
            spacing:        1
            size_hint_x:    .35
    BoxLayout:
        id:                 status_bar
        size_hint_y:        .1
        Label:
            text:           "MarcusInc."